@model SystemHotel.Models.HotelModel

@{
    Layout = "~/Areas/Admin/Views/Shared/MenuLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <h1>Add Hotel</h1>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Create", "Hotels", FormMethod.Post, new {enctype = "multipart/form-data"}))
            {
                <fieldset style="padding: 5px 40px; margin-top: 10px;" class="field-flex">
                    <div>
                        <div class="form-group">
                            <label asp-for="FkCountryId" class="control-label">Страна</label>
                            @Html.DropDownList("FkCountryId", ViewBag.Countries as SelectList,
                                                 new { id = "country", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label asp-for="FkRegionId" class="control-label">Регион</label>
                            @Html.DropDownList("FkRegionId", ViewBag.Regions as SelectList,
                                                 new { id = "region", @class = "form-control" })
                        </div>

                        <div class="form-group" style="margin-bottom: 15px;">
                            <label name="FkCityId" class="control-label">Город</label>
                            @Html.DropDownList("FkCityId", ViewBag.Cities as SelectList,
                                                 new { id = "city", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label asp-for="StreetName" class="control-label">Улица</label>
                            <input name="StreetName" class="form-control" required="required" />
                        </div>

                        <div class="form-group">
                            <label asp-for="HouseNumber" class="control-label">Номер дома</label>
                            <input name="HouseNumber" class="form-control" required="required" />
                        </div>

                        <div class="form-group">
                            <label asp-for="FkHotelCategory" class="control-label">Категория гостиницы</label>
                            @Html.DropDownList("FkHotelCategory", ViewBag.Category as SelectList,
                                                 new { id = "category", @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Название гостиницы</label>
                            <input name="Name" class="form-control" required="required" type="text/plain" />
                        </div>

                        <div class="form-group">
                            <label asp-for="MyImage" class="control-label">Примерное фото гостиницы</label>
                            <input name="MyImage" style="padding-bottom: 35px;" type="file" class="form-control" required="required" accept="image/jpeg" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>


                </fieldset>
            }
        </div>
    </div>

    <div>
        <a href=@Url.Action("Index","Hotels") >Back to List</a>
    </div>
</section>
