@model SystemHotel.Models.HotelModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>HotelModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FkCountryId" class="control-label"></label>
                <select asp-for="FkCountryId" class ="form-control" asp-items="ViewBag.FkCountryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkRegionId" class="control-label"></label>
                <select asp-for="FkRegionId" class ="form-control" asp-items="ViewBag.FkRegionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkCityId" class="control-label"></label>
                <select asp-for="FkCityId" class ="form-control" asp-items="ViewBag.FkCityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label"></label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseNumber" class="control-label"></label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkHotelCategory" class="control-label"></label>
                <input asp-for="FkHotelCategory" class="form-control" />
                <span asp-validation-for="FkHotelCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
