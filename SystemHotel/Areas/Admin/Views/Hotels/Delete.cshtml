@model SystemHotel.Models.HotelModel

@{
    Layout = "~/Areas/Admin/Views/Shared/MenuLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <h3>Are you sure you want to delete this?</h3>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card">
       <div class="card-body">
            <hr />
            <div>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.StreetName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.StreetName)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.HouseNumber)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.HouseNumber)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FkHotelCategory)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FkHotelCategory)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FkCity)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FkCity.Name)
                    </dd class>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FkCountry)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FkCountry.Name)
                    </dd class>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FkRegion)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FkRegion.Name)
                    </dd class>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
    
                @using (Html.BeginForm("Delete", "Hotels", FormMethod.Post)) {

                    <input type="hidden" asp-for="Id"/>
                    <div style="display: flex; justify-content: space-between;">
                        <input type="submit" value="Delete" class="btn btn-danger"/>   
                        <a href=@Url.Action("Index","Hotels") class="btn btn-info">Назад</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>